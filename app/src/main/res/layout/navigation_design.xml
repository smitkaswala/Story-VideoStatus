<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#080516">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navigation_exit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="20dp"/>

            <LinearLayout
                android:id="@+id/story_status"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="25dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_social"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="New Status"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/landscape_status"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="25dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_trending"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Trending Status"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/social_status"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="25dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_category"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Category"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="25dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_about"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="About Us"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="25dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_lockscreen"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Privacy Policy"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rate_us"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="25dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_star"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Rate Us"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>