<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        card_view:cardBackgroundColor="@color/text_color"
        card_view:cardCornerRadius="5.0dip"
        card_view:cardElevation="5.0dip"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="8.0dip"
                android:gravity="center"
                android:layout_marginBottom="10.0dip"
                android:text="Do you really want to exit the app?"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/delete_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5.0dip"
                    android:text="Yes"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/rate_us_bar"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:lottie_rawRes="@raw/loader_white_animation"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true">
                    </com.airbnb.lottie.LottieAnimationView>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="RateUs"
                        android:textColor="@color/navy_blue"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/delete_no"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg5"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="5.0dip"
                    android:text="No"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>